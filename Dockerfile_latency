# Build latency clustertest
FROM golang:1.19 AS builder

WORKDIR /build

RUN GOARCH=amd64 GOOS=linux go install github.com/guseggert/clustertest/cmd/agent@latest

COPY go.mod go.sum ./
RUN go mod download

COPY . ./
RUN GOARCH=amd64 GOOS=linux go build -o latency github.com/guseggert/clustertest-kubo/examples/latency

# Create lightweight container
FROM alpine:latest

RUN adduser -D -H clustertest
WORKDIR /home/clustertest
USER clustertest

COPY --from=builder /build/latency /usr/local/bin/latency
COPY --from=builder /go/bin/linux_amd64/agent /home/clustertest/nodeagent

CMD latency